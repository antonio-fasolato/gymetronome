!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge"}
    %meta{"name" => "viewport", "width" => "device-width, initial-scale=1"}

    %link{:rel => "stylesheet", :type => "text/css", :href => "//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css"}
    %link{:rel => "stylesheet", :type => "text/css", :href => "//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap-theme.min.css"}
    %link{:rel => "stylesheet", :type => "text/css", :href => "css/index.css"}

    %script{:type => "text/javascript", :src => "js/jquery-2.1.1.min.js"}
    %script{:type => "text/javascript", :src => "js/jquery-ui-1.10.4.min.js"}
    %script{:type => "text/javascript", :src => "js/jquery.timer.js"}
    %script{:type => "text/javascript", :src => "//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"}
    %script{:type => "text/javascript", :src => "js/index.js"}

    %title Gym metronome
  %body{:role => "document"}
    .navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          %button.navbar-toggle{:type => "button", "data-toggle" => "collapse", "data-target" => ".navbar-collapse"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "#"}Gym metronome
        .navbar-collapse.collapse
          %ul.nav.navbar-nav
            %li.active
              %a{:href => "#"}Home
            %li
              %a{:href => "#about"}About
            %li
              %a{:href => "#Contacts"}Contacts

    .container{:role => "main"}
      .panel.panel-default
        .panel-heading 
          %h3.panel-title Aggiungi elemento
        .panel-body
          .input-group
            %span.input-group-addon
              %span.glyphicon.glyphicon-plus
            %input#tbTime.form-control{:type => "text"}
            %span.input-group-btn
              %button#btnAdd.btn.btn-primary{:type => "button"} Add
          .btn-group.btn-group-justified
            .btn-group
              %button#btnClear.btn.btn-default{:type => "button"} Clear
            .btn-group
              %button#btnStart.btn.btn-success{:type => "button"} Start
            .btn-group
              %button#btnStop.btn.btn-danger{:type => "button"} Stop

      .panel.panel-default
        .panel-body
          %ul#tblTimers.list-group
            %li#timerBase.list-group-item{"data-array-index" => "-1"}
              %span.timer 10
