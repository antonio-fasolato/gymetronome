!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge"}
    %meta{"name" => "viewport", "width" => "device-width, initial-scale=1"}

    %link{:rel => "stylesheet", :type => "text/css", :href => "//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css"}
    %link{:rel => "stylesheet", :type => "text/css", :href => "//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap-theme.min.css"}
    %link{:rel => "stylesheet", :type => "text/css", :href => "css/index.css"}

    %script{:type => "text/javascript", :src => "js/jquery-2.1.1.min.js"}
    %script{:type => "text/javascript", :src => "js/jquery-ui-1.10.4.min.js"}
    %script{:type => "text/javascript", :src => "js/jquery.timer.js"}
    %script{:type => "text/javascript", :src => "//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"}
    %script{:type => "text/javascript", :src => "js/index.js"}

    %title Gym metronome
  %body{:role => "document"}
    %nav.navbar.navbar-inverse{:role => "navigation"}
      .container-fluid
        .navbar-header
          %button.navbar-toggle{:type => "button", "data-toggle" => "collapse", "data-target" => "#collapse-menu"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %span.navbar-brand 
            Gym metronome &nbsp;
            %a{:href => "#"}
              %span.glyphicon.glyphicon-plus

        #collapse-menu.navbar-collapse.collapse
          %ul.nav.navbar-nav
            %li
              %a{:href => "#"}Aggiungi Timer
            %li.divider
            %li.dropdown-header
              Timers
              %span.badge 3
            %li.active
              %a{:href => "#"}Timer 1
            %li
              %a{:href => "#"}Timer 2
            %li
              %a{:href => "#"}Timer 3

    .container{:role => "main"}
      .panel.panel-default
        .panel-heading 
          %h3.panel-title Aggiungi intervallo
        .panel-body
          .input-group
            %span.input-group-addon
              %span.glyphicon.glyphicon-plus
            %input#tbTime.form-control{:type => "text"}
            %span.input-group-btn
              %button#btnAdd.btn.btn-primary{:type => "button"} Add

      .well
        %ul#tblTimers.list-group
          %li#timerBase.list-group-item{"data-array-index" => "-1"}
            .container-fluid
              .row
                .col-xs-9
                  %span.timer-description Timer 1
                .col-xs-1
                  %span.glyphicon.glyphicon-play-circle
                .col-xs-2
                  %span.timer 00:10
              .row
                .col-xs-2.timer-orig
                  %span.timer 02:00

    .navbar.navbar-inverse.navbar-fixed-bottom
      .container
        .navbar-header
          .btn-group.btn-group-justified.btn-sm
            .btn-group
              %button#btnClear.btn.btn-default{:type => "button"} Clear
            .btn-group
              %button#btnStart.btn.btn-success{:type => "button"} Start
            .btn-group
              %button#btnStop.btn.btn-danger{:type => "button"} Stop
